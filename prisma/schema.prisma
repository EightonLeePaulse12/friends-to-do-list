generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Todo {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  isCompleted Boolean   @default(false)
  dueDate     DateTime? @db.Date
  priority    Priority?
}

enum Priority {
  One
  Two
  Three
  Four
  Five
}
